this.playerLeft = {
		      model: null,
		      scene: null,
		      render: null,
		      nickname: "",
		      points: 0,
		      hasTurn: true
		  };
		  
this.playerRight = {
		      model: null,
		      scene: null,
		      render: null,
		      nickname: "",
		      points: 0,
		      hasTurn: false
		  };
		  
this.Players = { right: this.playerRight, left: this.playerLeft };
		  
//models are set and generated by init_scene();
function init_game() {
  var counter = 0;
  if(this.playerLeft.hasTurn) {
      //rechts wartet
	bumbModel( this.playerRight.model );

  }else if( this.playerRight.hasTurn) {

	bumbModel( this.playerLeft.model );

  }
}